@model EasyAppointments.Services.DTOs.AdminDTOs.CityDTOs.GetCityDto
<div class="row">
    <div class="col-sm">
        <form id="FrmCity">
            @Html.HiddenFor(a => a.Id)
            <div class="form-group">
                <label>Name</label>
                @Html.TextBoxFor(a => a.Name, new { @class = "form-control", placeholder = "Enter City Name" })
                @Html.ValidationMessageFor(a => a.Name, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label>Province</label>
                <select class="form-control" id="ProvinceId" name="ProvinceId">
                    <option>Select Province</option>
                        @foreach (var item in Model.Provinces!)
                        {
                            if (Model.ProvinceId ==item.Id)
                            {
                                <option selected value="@item.Id">@item.ProvinceName</option>
                            }
                            else
                            {
                                <option value="@item.Id">@item.ProvinceName</option>
                            }
                        }   
                </select>
            </div>
            <div class="form-group">
                <label>Status</label>
                @Html.DropDownListFor(a => a.Status, new List<SelectListItem> { new SelectListItem { Text = "Active", Value = "0" }, new SelectListItem { Text = "InActive", Value = "1" } }, "Select status", new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Status, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <div>
                    <button type="button" class="btn btn-primary waves-effect waves-light" onclick="saveCity()">
                        Submit
                    </button>
                    <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                        Cancel
                    </button>
                    <br />
                    <hr />
                    <button type="button" id="ButtonText" class="btn btn-info" onclick="getCities()">Show List</button>
                </div>
            </div>
        </form>
    </div>
</div>