@model EasyAppointments.Services.DTOs.AdminDTOs.ProvinceDto
<div class="row">
    <div class="col-sm">
        <form id="FrmProvince">
            @Html.HiddenFor(a => a.Id)
            <div class="form-group">
                <label>ProvinceName</label>
                @Html.TextBoxFor(a => a.ProvinceName, new { @class = "form-control", placeholder = "Enter province Name" })
                @Html.ValidationMessageFor(a => a.ProvinceName, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <label>Status</label>
                @Html.DropDownListFor(a => a.Status, new List<SelectListItem> { new SelectListItem { Text = "Active", Value = "0" }, new SelectListItem { Text = "InActive", Value = "1" } }, "Select status", new { @class = "form-control" })
                @Html.ValidationMessageFor(a => a.Status, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <div>
                    <button type="button" class="btn btn-primary waves-effect waves-light" onclick="saveProvince()">
                        Submit
                    </button>
                    <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                        Cancel
                    </button>
                    <br>
                    <hr>
                    <button type="button" id="ButtonText" class="btn btn-info" onclick="getProvinces()">Show List</button>
                </div>
            </div>
        </form>
    </div>
</div>
