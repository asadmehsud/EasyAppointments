@model EasyAppointments.Services.DTOs.AdminDTOs.DayDto
<div class="row">
    <div class="col-sm">
        <form id="FrmDay">
            @Html.HiddenFor(a => a.Id)
            <div class="form-group">
                @Html.LabelFor(a=>a.WeekDay)
                @Html.TextBoxFor(a => a.WeekDay, new { @class = "form-control", placeholder = "Enter Week Day" })
                @Html.ValidationMessageFor(a => a.WeekDay, "", new { @style = "color:red" })
            </div>
            <div class="form-group">
                <div>
                    <button type="button" class="btn btn-primary waves-effect waves-light" onclick="saveDay()">
                        Submit
                    </button>
                    <button type="reset" class="btn btn-secondary waves-effect m-l-5">
                        Cancel
                    </button>
                    <br>
                    <hr>
                    <button type="button" id="ButtonText" class="btn btn-info" onclick="getDays()">Show List</button>
                </div>
            </div>
        </form>
    </div>
</div>
