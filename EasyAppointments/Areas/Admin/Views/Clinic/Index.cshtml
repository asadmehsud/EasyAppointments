@model EasyAppointments.Services.DTOs.AdminDTOs.ClinicDTOs.GetClinicDto
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<div class="content container-fluid">

    <div class="page-header">
    </div>


    <div class="row">
        <div class="col-sm-12">

            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Clinic Form</h4>
                    <p>Please carefully enter all the required information. Changes are tolerated but they can be exhaustive</p>
                </div>
                <div class="card-body">
                    <div class="row">   
                        <div class="col-sm">
                            <div id="MedCenterFormDiv">
                                @* Div For Rendering MedCenter Form *@
                                @Html.Partial("_EditClinic")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="ClinicListDiv">
        @* Div For Rendering MedCenter List *@
    </div>
    @section LoadFiles
    {
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js" integrity="sha512-lbwH47l/tPXJYG9AcFNoJaTMhGvYWhVM9YI43CT+uteTRRaiLCui8snIgyAN8XWgNjNhCqlAUdzZptso6OCoFQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>


        <script>
            $(document).ready(function () {
                // $("#sidebar").scroll();
            });

            function showConfirmationDialog(action, Id) {
                Swal.fire({
                    title: `Confirmation`,
                    text: 'Are you sure?',
                    icon: 'warning',
                    showCancelButton: true,
                    confirmButtonColor: '#3085d6',
                    cancelButtonColor: '#d33',
                    confirmButtonText: 'Yes, proceed!',
                    cancelButtonText: 'Cancel'
                }).then((result) => {
                    if (result.isConfirmed) {
                        if (action === 'Submittion') {
                            saveClinic();
                        }
                        else if (action === 'Deletion') {
                            deleteClinic(Id);
                        }
                    }
                });
            }
            function saveClinic() {
                if ($("#FrmClinic").valid()) {
                    var frmData = new FormData(document.getElementById('FrmClinic'));
                    $.ajax({
                        type: 'post',
                        url: '/Admin/Clinic/Save',
                        processData: false,
                        contentType: false,
                        data: frmData,
                        success: function (result) {
                            debugger;
                            if (result == true) {
                                Swal.fire(
                                    'Success!',
                                    `Opration successfull.`,
                                    'success'
                                );
                            }
                            else{
                            Swal.fire(
                                "Error!",
                                "Error Submitting Form.",
                                "Error"
                            );
                        }
                        }
                    });
                }
            }
            function getClinics() {
                debugger;
                $.ajax({
                    type: 'Get',
                    url: '/Admin/Clinic/GetClinics',
                    success: function (Result) {
                        $("#ClinicListDiv").html(Result);
                        $("#ButtonText").text("Show Modified List");
                    }
                });
            }
            function updateClinic(id) {
                $.ajax({
                    type: 'Get',
                    url: '/Admin/Clinic/UpdateClinic',
                    data: { ClinicId: id },
                    success: function (Result) {
                        $("#MedCenterFormDiv").html(Result);
                    }
                });
            }
            function deleteClinic(id) {
                $.ajax({
                    type: 'Get',
                    url: '/Admin/Clinic/DeleteClinic',
                    data: { ClinicId: id },
                    success: function (Result) {
                        if (Result == true) {
                            Swal.fire(
                                'Success!',
                                `Deleted successfully.`,
                                'success'
                            );
                        }
                        else{
                            Swal.fire(
                                "Error!",
                                "Error Deleting Record.",
                                "Error"
                            );
                        }
                    }
                });
            }
            function getCityByProvince() {
                debugger;
                var province = $("#ProvinceId").val();
                $.ajax({
                    type: 'post',
                    url: '/Admin/Clinic/GetCityByProvinceId',
                    data: { ProvinceId: province },
                    success: function (result) {
                        debugger;
                        $("#CityId").html(result);
                    }
                });
            }
        </script>
    }
</div>


