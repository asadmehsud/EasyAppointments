@model EasyAppointments.Services.DTOs.DoctorDTOs.DoctorDto

<h3 style="text-decoration:underline">Location Details</h3>
<br />
<form id="FrmDoctor" method="post" enctype="multipart/form-data">
    @Html.HiddenFor(a => a.Id)
    <div style="display:flex">
        <div class="col-md-6" style="padding-right:5px">
            <label>Province</label>
            <select class="form-control" id="Province" name="Province" onchange="getCityByProvince()">
                <option value="0">Select Province</option>
                @foreach (var item in Model.Provinces)
                {
                    <option value="@item.Id">@item.ProvinceName</option>
                }
            </select>
            @Html.ValidationMessageFor(a => a.Province, "", new { @style = "color:red" })
        </div>
        <div class="col-md-6">
            <label>City</label>
            <select class="form-control" id="City" name="City">
                <option selected>Select City</option>
                <option>!-- Select Province First --!</option>
            </select>
            @Html.ValidationMessageFor(a => a.City, "", new { @style = "color:red" })
        </div>
    </div>
    <div style="display:flex">
        <div class="col-md-6" style="padding-right:5px">
            <label>Address</label>
            @Html.TextBoxFor(a => a.Address, new { @class = "form-control", placeholder = "Enter Address" })
            @Html.ValidationMessageFor(a => a.Address, "", new { @style = "color:red" })
        </div>
        <div class="col-md-12">
            <label>ZipCode</label>
            @Html.TextBoxFor(a => a.ZipCode, new { @class = "form-control", placeholder = "Enter ZipCode" })
            @Html.ValidationMessageFor(a => a.ZipCode, "", new { @style = "color:red" })
        </div>
    </div>

    <div class="text-end">
        <a class="forgot-link" href="login.html">Already have an account?</a>
    </div>

    <div style="display:flex">
        <button class="btn btn-primary w-50" type="button" onclick="showConfirmationDialog('Submittion',0)" style="margin-right:5px">Signup</button>
        <button class="btn btn-secondary w-50" type="reset">Cancel</button>
    </div>
</form>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>



